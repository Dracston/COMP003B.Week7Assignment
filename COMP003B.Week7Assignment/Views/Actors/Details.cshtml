@model COMP003B.Week7Assignment.Models.Actor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.actorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.actorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.rolePlayed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rolePlayed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
</div>

<div class="col-md-4">
    <h4>Courses</h4>
    <ul>
        @foreach (Movie movie in ViewBag.Movies)
        {
            <li>@movie.movieTitle</li>
        }
    </ul>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.actorId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
